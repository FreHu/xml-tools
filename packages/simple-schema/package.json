{
  "name": "@xml-tools/simple-schema",
  "version": "3.0.1",
  "description": "XML Simple Schema",
  "keywords": [
    "xml",
    "validation"
  ],
  "main": "lib/api.js",
  "repository": "https://github.com/sap/xml-tools/",
  "license": "Apache-2.0",
  "typings": "./api.d.ts",
  "files": [
    ".reuse",
    "LICENSES",
    "api.d.ts"
  ],
  "dependencies": {
    "@xml-tools/ast": "^5.0.1",
    "@xml-tools/content-assist": "^3.1.8",
    "lodash": "4.17.20"
  },
  "devDependencies": {
    "@xml-tools/parser": "^1.0.8",
    "@xml-tools/validation": "^1.0.12"
  },
  "scripts": {
    "ci": "npm-run-all clean type-check coverage:*",
    "clean": "rimraf ./coverage ./nyc_output",
    "test": "mocha \"./test/**/*spec.js\"",
    "coverage:run": "nyc mocha \"./test/**/*spec.js\"",
    "coverage:check": "nyc check-coverage --lines 100 --branches 100 --statements 100 --functions 100",
    "type-check": "tsc api.d.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
