{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lerna:version": "lerna version",
    "lerna:publish": "lerna publish from-git --yes",
    "ci": "npm-run-all format:validate ci:subpackages",
    "format:fix": "prettier --write \"**/*.@(ts|js|json|md)\"",
    "format:validate": "prettier --check \"**/*.@(ts|js|json|md)\"",
    "ci:subpackages": "lerna run ci",
    "test": "lerna run test"
  },
  "devDependencies": {
    "typescript": "3.6.4",
    "@types/mocha": "5.2.7",
    "@types/chai": "4.2.3",
    "chai": "^4.2.0",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "nyc": "14.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
